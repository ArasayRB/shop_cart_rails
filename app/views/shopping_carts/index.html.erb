

<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.quantity' %></th>
      <th colspan="3"><%= t 'global.tools' %></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><%= t '.quantity' %></th>
      <th colspan="3"><%= t 'global.tools' %></th>
    </tr>
  </tfoot>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <tr>
        <td><%= shopping_cart.quantity %></td>
        <td>
          <a class="fa fa-eye ml-3"><%= link_to t('.show'), shopping_cart %></a>
          <a class="fa fa-edit ml-3"><%= link_to t('.edit'), edit_shopping_cart_path(shopping_cart) %></a>
          <a class="fa fa-trash-alt ml-3"><%= link_to t('.destroy'), shopping_cart, method: :delete, data: { confirm: t('.confirm') } %></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.btn_new'), new_shopping_cart_path %>
