

<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.number' %></th>
      <th><%= t '.cvv' %></th>
      <th><%= t '.cash' %></th>
      <th><%= t '.expire' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.number %></td>
        <td><%= credit_card.cvv %></td>
        <td><%= credit_card.cash %></td>
        <td><%= credit_card.expire %></td>
        <td><%= link_to t('.show'), credit_card %></td>
        <td><%= link_to t('.edit'), edit_credit_card_path(credit_card) %></td>
        <td><%= link_to t('.destroy'), credit_card, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.btn_new'), new_credit_card_path %>
