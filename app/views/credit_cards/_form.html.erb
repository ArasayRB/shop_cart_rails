<%= form_with(model: credit_card) do |form| %>
  <% if credit_card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t 'credit_cards.forms.messages.errors.', count: credit_card.errors.count %>
      </h2>

      <ul>
        <% credit_card.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :cvv %>
    <%= form.text_field :cvv %>
  </div>

  <div class="field">
    <%= form.label :cash %>
    <%= form.text_field :cash %>
  </div>

  <div class="field">
    <%= form.label :expire %>
    <%= form.date_select :expire %>
  </div>

  <div class="actions">
    <%= form.submit t('credit_cards.submit'), class: "btn btn-primary" %>
  </div>
<% end %>
