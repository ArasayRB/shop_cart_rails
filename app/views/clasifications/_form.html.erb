<%= form_with(model: clasification) do |form| %>
  <% if clasification.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t 'clasifications.forms.messages.errors.', count: clasification.errors.count %>
      </h2>

      <ul>
        <% clasification.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :clasification %>
    <%= form.text_field :clasification %>
  </div>

  <div class="actions">
    <%= form.submit t('clasifications.submit'), class: "btn btn-primary" %>
  </div>
<% end %>
