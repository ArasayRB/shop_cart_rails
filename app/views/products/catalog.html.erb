

<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'products.global.code' %></th>
      <th><%= t 'products.global.name' %></th>
      <th><%= t 'products.global.description' %></th>
      <th><%= t 'products.global.stock' %></th>
      <th><%= t 'products.global.price' %></th>
      <th><%= t 'products.global.um' %></th>
      <th><%= t 'products.global.image' %></th>
      <th colspan="3"><%= t 'global.tools' %></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><%= t 'products.global.code' %></th>
      <th><%= t 'products.global.name' %></th>
      <th><%= t 'products.global.description' %></th>
      <th><%= t 'products.global.stock' %></th>
      <th><%= t 'products.global.price' %></th>
      <th><%= t 'products.global.um' %></th>
      <th><%= t 'products.global.image' %></th>
      <th colspan="3"><%= t 'global.tools' %></th>
    </tr>
  </tfoot>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.code %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.stock %></td>
      <td><%= product.price %></td>
      <td><%= product.um %></td>
      <td>
        <% if product.image.attached? %>
         <image src="<%= url_for(product.image) %>" height=80></image>
        <% end %>
      </td>
      <td>
        <%= button_to t('.btn_buy'), item_lines_path(product_id: product), class: 'btn btn-primary' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>


<%= link_to t('.shopping_cart'), shopping_cart_path(@cart) %>
