  <div class="card large-container center-block">
    <div class="card-header">
      <h1><%= t '.title' %></h1>
    </div>
    <div class="card-body center-block">
      <p>
        <strong><%= t 'products.global.code' %>:</strong>
        <%= @product.code %>
      </p>

      <p>
        <strong><%= t 'products.global.name' %>:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong><%= t 'products.global.stock' %>:</strong>
        <%= @product.stock %>
      </p>

      <p>
        <strong><%= t 'products.global.price' %>:</strong>
        <%= @product.price %>
      </p>

      <p>
        <strong><%= t 'products.global.um' %>:</strong>
        <%= @product.um %>
      </p>

      <p>
        <strong><%= t 'products.global.img' %>:</strong>
        <%= @product.img %>
      </p>
    </div>
    <div class="card-footer center-block">
      <div class="row">
       <p><%= t '.manage_by' %> <%= link_to @product.user.email, from_manager_products_path(@product.user), class:"font-weight-bold" %></p>
      </div>
      <%= link_to t('.edit'), edit_product_path(@product) %> |
      <%= link_to t('.back'), products_path %>
    </div>
  </div>
