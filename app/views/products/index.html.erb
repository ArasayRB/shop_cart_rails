

<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.code' %></th>
      <th><%= t '.name' %></th>
      <th><%= t '.stock' %></th>
      <th><%= t '.price' %></th>
      <th><%= t '.um' %></th>
      <th><%= t '.img' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th><%= t '.code' %></th>
      <th><%= t '.name' %></th>
      <th><%= t '.stock' %></th>
      <th><%= t '.price' %></th>
      <th><%= t '.um' %></th>
      <th><%= t '.img' %></th>
      <th colspan="3"><%= t 'global.tools' %></th>
    </tr>
  </tfoot>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.stock %></td>
        <td><%= product.price %></td>
        <td><%= product.um %></td>
        <td><%= product.img %></td>
        <td>
          <a class="fa fa-eye ml-3"><%= link_to t('.show'), product %></a>
          <a class="fa fa-edit ml-3"><%= link_to t('.edit'), edit_product_path(product) %></a>
          <a class="fa fa-trash-alt ml-3"><%= link_to t('.destroy'), product, method: :delete, data: { confirm: t('.confirm') } %></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.btn_new'), new_product_path %>
